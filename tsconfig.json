{
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "dist",
    ".vscode",
    "typings/browser.d.ts",
    "typings/brower/**"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "watch": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
